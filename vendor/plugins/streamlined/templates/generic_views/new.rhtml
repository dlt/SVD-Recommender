<%= render_new_header %>

<% options = {:url => {:action => 'create', :id=>@streamlined_item}} %>
<% if model_ui.new_submit_button[:ajax] %>
  <% options[:html] = {:onsubmit=>'Streamlined.Form.submit(this); return false;'} %>
<% end %>

<% form_for model_underscore.to_sym, @streamlined_item, options do |form| %>
  <%= render :partial => 'form', :locals=>{:form=>form} %>
  <%= submit_tag 'Create' %>
<% end %>